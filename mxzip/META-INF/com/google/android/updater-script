#MAGISK
############################################
#
# Magisk Flash Script (updater-script)
# by topjohnwu
#
############################################

##############
# Preparation
##############

COMMONDIR=$INSTALLER/common
APK=$COMMONDIR/magisk.apk
CHROMEDIR=$INSTALLER/chromeos

# Default permissions
umask 022

OUTFD=$2
ZIP=$3

if [ ! -f $COMMONDIR/util_functions.sh ]; then
  echo "! Unable to extract zip file!"
  exit 1
fi

# Load utility fuctions
. $COMMONDIR/util_functions.sh

setup_flashable

############
# Detection
############

if echo $MAGISK_VER | grep -q '\.'; then
  PRETTY_VER=$MAGISK_VER
else
  PRETTY_VER="$MAGISK_VER($MAGISK_VER_CODE)"
fi
print_title "Magisk $PRETTY_VER Installer"

ui_print " ";
ui_print "MACHINEX";
ui_print "Adjusting jiggawattage in flux capacitor";

is_mounted /data || mount /data || is_mounted /cache || mount /cache
mount_partitions
check_data
get_flags
find_boot_image

[ -z $BOOTIMAGE ] && abort "! Unable to detect target image"
ui_print "- Target image: $BOOTIMAGE"

# Detect version and architecture
api_level_arch_detect

[ $API -lt 17 ] && abort "! Magisk only support Android 4.2 and above"

ui_print "- Device platform: $ARCH"

BINDIR=$INSTALLER/$ARCH32
chmod -R 755 $CHROMEDIR $BINDIR

# Check if system root is installed and remove
remove_system_su

##############
# Environment
##############

ui_print "- Constructing environment"

# Copy required files
rm -rf $MAGISKBIN/* 2>/dev/null
mkdir -p $MAGISKBIN 2>/dev/null
cp -af $BINDIR/. $COMMONDIR/. $CHROMEDIR $BBBIN $MAGISKBIN
chmod -R 755 $MAGISKBIN

# addon.d
ui_print "- Adding addon.d survival script"
mount -o rw,remount /system
if [ ! -d /system/addon.d ]; then
  mkdir /system/addon.d
fi
ADDOND=/system/addon.d/99-magisk.sh
cp -af $COMMONDIR/addon.d.sh $ADDOND
chmod 755 $ADDOND

ui_print "- Maintaining init.d support"
[ ! -d /system/etc/init.d ] && mkdir /system/etc/init.d;
chmod -R 755 /system/etc/init.d;
chown -R 0:2000 /system/etc/init.d;
rm -rf /data/magisk_backup*

ui_print "- Importing updated WiFi Firmware"
if [ ! -d "/system/etc/wifi/backups" ]
then
	mkdir /system/etc/wifi/backups
	cp -af /system/etc/wifi/bcmdhd_apsta.bin /system/etc/wifi/backups/
	cp -af /system/etc/wifi/bcmdhd_ibss.bin /system/etc/wifi/backups/
	cp -af /system/etc/wifi/bcmdhd_mfg.bin /system/etc/wifi/backups/
	cp -af /system/etc/wifi/bcmdhd_sta.bin /system/etc/wifi/backups/
	cp -af /system/etc/wifi/nvram_mfg.txt /system/etc/wifi/backups/
	cp -af /system/etc/wifi/nvram_mfg.txt_murata /system/etc/wifi/backups/
	cp -af /system/etc/wifi/nvram_mfg.txt_muratafem1 /system/etc/wifi/backups/
	cp -af /system/etc/wifi/nvram_net.txt /system/etc/wifi/backups/
	cp -af /system/etc/wifi/nvram_net.txt_murata /system/etc/wifi/backups/
	cp -af /system/etc/wifi/nvram_net.txt_muratafem1 /system/etc/wifi/backups/
	cp -af /system/etc/wifi/p2p_supplicant_overlay.conf /system/etc/wifi/backups/
	cp -af /system/etc/wifi/WCNSS_qcom_cfg.ini /system/etc/wifi/backups/
	cp -af /system/etc/wifi/wpa_supplicant.conf /system/etc/wifi/backups/
	cp -af /system/etc/wifi/wpa_supplicant_overlay.conf /system/etc/wifi/backups/
fi

cp -af $COMMONDIR/wifi/bcmdhd_apsta.bin /system/etc/wifi/
cp -af $COMMONDIR/wifi/bcmdhd_ibss.bin /system/etc/wifi/
cp -af $COMMONDIR/wifi/bcmdhd_mfg.bin /system/etc/wifi/
cp -af $COMMONDIR/wifi/bcmdhd_sta.bin /system/etc/wifi/
cp -af $COMMONDIR/wifi/nvram_mfg.txt /system/etc/wifi/
cp -af $COMMONDIR/wifi/nvram_mfg.txt_murata /system/etc/wifi/
cp -af $COMMONDIR/wifi/nvram_mfg.txt_muratafem1 /system/etc/wifi/
cp -af $COMMONDIR/wifi/nvram_net.txt /system/etc/wifi/
cp -af $COMMONDIR/wifi/nvram_net.txt_murata /system/etc/wifi/
cp -af $COMMONDIR/wifi/nvram_net.txt_muratafem1 /system/etc/wifi/
cp -af $COMMONDIR/wifi/p2p_supplicant_overlay.conf /system/etc/wifi/
cp -af $COMMONDIR/wifi/WCNSS_qcom_cfg.ini /system/etc/wifi/
cp -af $COMMONDIR/wifi/wpa_supplicant.conf /system/etc/wifi/
cp -af $COMMONDIR/wifi/wpa_supplicant_overlay.conf /system/etc/wifi/

chmod 644 /system/etc/wifi/bcmdhd_apsta.bin
chmod 644 /system/etc/wifi/bcmdhd_ibss.bin
chmod 644 /system/etc/wifi/bcmdhd_mfg.bin
chmod 644 /system/etc/wifi/bcmdhd_sta.bin
chmod 644 /system/etc/wifi/nvram_mfg.txt
chmod 644 /system/etc/wifi/nvram_mfg.txt_murata
chmod 644 /system/etc/wifi/nvram_mfg.txt_muratafem1
chmod 644 /system/etc/wifi/nvram_net.txt
chmod 644 /system/etc/wifi/nvram_net.txt_murata
chmod 644 /system/etc/wifi/nvram_net.txt_muratafem1
chmod 644 /system/etc/wifi/p2p_supplicant_overlay.conf
chmod 644 /system/etc/wifi/WCNSS_qcom_cfg.ini
chmod 644 /system/etc/wifi/wpa_supplicant.conf
chmod 644 /system/etc/wifi/wpa_supplicant_overlay.conf

$BOOTMODE || recovery_actions

#####################
# Boot/DTBO Patching
#####################

install_magisk

# Cleanups
$BOOTMODE || recovery_cleanup
rm -rf $TMPDIR

ui_print "- Done"
exit 0
